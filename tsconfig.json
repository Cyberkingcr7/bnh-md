{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",

    "target": "ES2020",
    "module": "commonjs",

    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "baseUrl": "."
  },

  "include": [
    "src/**/*",
    "m.d.ts",
    "src/types/**/*"
  ],

  "exclude": [
    "node_modules",
    "lib"
  ]
}
